<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <NumberPicker
        android:id="@+id/numPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="324dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorNumPicker"
        android:solidColor="@color/colorAccent">

    </NumberPicker>

    <NumberPicker
        android:id="@+id/numPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="224dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorNumPicker"
        android:solidColor="@color/colorAccent">

    </NumberPicker>

    <NumberPicker
        android:id="@+id/numPicker3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorNumPicker"
        android:solidColor="@color/colorAccent">

    </NumberPicker>

    <NumberPicker
        android:id="@+id/numPicker4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorNumPicker"
        android:solidColor="@color/colorAccent">

        <!-- android:visibility="invisible" Add this if you want the numpicker to be invisible -->

    </NumberPicker>

    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="371dp"
        android:background="@color/colorAnswer"
        android:text="@string/answerText"
        android:textSize="@dimen/answerSize" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="503dp"
        android:background="@color/colorAnswer"
        android:text="@string/buttonInfo"
        android:textSize="@dimen/answerSize" />

</RelativeLayout>